{% block title %}Historique index{% endblock %}

{% block body %}
    <div class="container">
    <h1>Historique index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Qualite</th>
                <th>Sonde</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for historique in historiques %}
            <tr>
                <td>{{ historique.id }}</td>
                <td>{{ historique.Date ? historique.Date|date('Y-m-d') : '' }}</td>
                <td>{{ historique.Qualite }}</td>
                <td>{{ historique.dataOak.name }}</td>
                <td>
                    <a href="{{ path('historique_show', {'id': historique.id}) }}">show</a>
                    <a href="{{ path('historique_edit', {'id': historique.id}) }}">edit</a>
                </td>
            </tr>
