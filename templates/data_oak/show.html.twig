{% extends 'base.html.twig' %}

{% block title %}DataOak{% endblock %}

{% block body %}
<div class="container">
    <h1>La sonde de {{ data_oak.name }} </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ data_oak.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ data_oak.name }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ data_oak.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ data_oak.longitude }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ data_oak.TimeStamp }}</td>
            </tr>
            <tr>
                <th>Qualité de l'air</th>
                <td>{{ data_oak.QualiteAir }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('data_oak_index') }}">Retour à la liste</a>

    <a href="{{ path('data_oak_edit', {'id': data_oak.id}) }}">Editer</a>

    {{ include('data_oak/_delete_form.html.twig') }}
{% endblock %}
